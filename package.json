{
  "name": "draw-canvas-component",
  "repository": "https://github.com/lynques/draw-canvas-component",
  "version": "2.0.0",
  "description": "Custom Webcomponent with built in canvas drawing functionality",
  "main": "src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "pretest": "tslint src/**/*.ts{,x} -t verbose",
    "start": "webpack-dev-server --open --hot --output-public-path=/dist/ --config webpack.dev.js",
    "test": "karma start karma.conf.js",
    "test:once": "npm run pretest && karma start karma.conf.js --single-run",
    "watch": "webpack --watch --config webpack.dev.js"
  },
  "keywords": [
    "custom element",
    "canvas"
  ],
  "author": "Aaron Romel",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "awesome-typescript-loader": "^3.4.1",
    "clean-webpack-plugin": "^0.1.18",
    "jasmine": "^3.0.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.9",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "typescript": "^2.7.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^3.1.11",
    "webpack-merge": "^4.1.1"
  }
}
