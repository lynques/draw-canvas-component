{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": false,
      "allowJs": true,
      "strict": true,
      "rootDir": "./"
  }
}
